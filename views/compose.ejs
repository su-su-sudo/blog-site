<%- include('partials/header') -%>
<h1>Compose</h1>
<form class="" action="/compose" method="post">
  <div class="form-group">
    <label for="postTitle">Post Title</label>
    <input class="form-control" type="text" name="postTitle" placeholder="Title">
    </div>

  <div class="form-group">
      <label for="newEntry">Compose new Entry</label>
      <textarea class="form-control" name="postBody" rows="5" cols="60" placeholder="Content..."></textarea>
  </div>

  <button type="submit" class="btn btn-secondary" name="button">Publish</button
</form>
<%- include('partials/footer') -%>
